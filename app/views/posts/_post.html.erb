<div class="m-1 d-table-caption container-fluid rounded card-header "  >
  <div class="p-3  d-flex justify-content-between" >

    <div class="d-flex">
      <div>
        <% if post.account.profile_pic.attached? %>
          <%= image_tag(post.account.profile_pic, width: 20,class:"rounded-circle border-top-0 ")  %>
          <%#= link_to 'Remove',to: @post.images[image].purge %>
        <% else %>
          <%= image_tag('default.png', width: 20,class:"rounded-circle border-top-0 ")  %>
        <% end %>
      </div>&nbsp;&nbsp;&nbsp;&nbsp;
      <strong><%= post.account.email %></strong>
    </div>
    <div >
    <% if (current_account == post.account) %>
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Delete', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' }, remote: true %>
    <% end %>
    </div>
  </div>
  <div class="card-body">
    <p class="card-text">
      <% if post.images.attached? %>
        <% (0...post.images.count).each do |image|%>
          <%= image_tag(post.images[image], width: 500, class:' rounded' )%>
        <% end %>
      <% end %>
    </p>
    <p class="card-text"><%= post.description %></p>
    <%= render 'likes/form', post: post %>
    <%= render partial: 'comments/form', locals: {post: post} %>
    </div>
    </div>
  </div>
</div>
