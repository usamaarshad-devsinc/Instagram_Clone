<div class="centralize">
  <div class="d-table-caption card-header  p-4 bottom_border">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
      </div>

      <div class="field">
        <%= f.label :full_name %><br />
        <%= f.text_field :full_name, required: true %>
      </div>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, required: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
